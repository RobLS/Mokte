.article-title a {
  position: relative;
  display: inline-block;
  outline: none;
  font-weight: 400;
  text-shadow: 0 0 1px rgba(255,255,255,0.3);
}
.article-title a:hover,
.article-title a:focus {
  outline: none;
}
article h2 {
  margin-bottom: 0px;
  padding: 5px;
  color: #435a6b;
  margin-bottom: 10px;
  border-bottom: 1px solid rgba(15,124,103,0);
}
article h2:hover {
  border-bottom: 1px solid #435a6b;
}
article h2 a span {
  display: block;
  background: #eee;
}
article h2 a:hover {
  text-decoration: none;
}
