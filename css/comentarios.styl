article.js-comment

  background #bbb
  margin-bottom 1rem
  border-radius 5px

  footer
    background #888
    border-radius 5px 5px 0px 0px
    
    p
      display inline-block
      margin-bottom 0px

  h3
    margin-bottom 0.5rem
  
  p
    font-size 0.909rem
    margin-bottom 0.5rem
    word-break break-all

.indented
  margin-left 5%
  position relative

  .js-comment
    
    
    &:before
      content " "
      border-bottom 1rem solid #888
      border-left 1rem solid transparent
      border-top 1rem solid transparent
      border-right 1rem solid transparent
      position absolute
      top -1.7rem
      left 5px

  p
    font-size 0.85rem
