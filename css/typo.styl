/*************************************/
/*                Typo               */
/*************************************/

body {
  font-family: 'Gentium Book Basic', serif;
  font-weight: 400;
}
article h2 {
  font-size: 32px;
  font-size: 2rem;
  line-height: 1;
}
article h4 {
  font-size: 26px;
  font-size: 1.625rem;
  line-height: 1.2;
}
article h5 {
  font-size: 24px;
  font-size: 1.5rem;
  line-height: 1.33333;
}
article h6 {
  font-size: 20px;
  font-size: 1.25rem;
  line-height: 1.5;
}
article p {
  font-size: 1.15rem;
}
@media screen and (min-width: 768px) {
  article p {
    line-height: 1.5;
  }
}
/* FIN TYPO  */
