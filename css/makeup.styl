/*************************************/
/*               Makeup              */
/*************************************/
article.comment {
  font-family: monospace;
  margin: 0 0 1.5rem;
}
article.comment .submitted {
  font-size: 11px;
}
article.node:after {
  content: '\2022 \00a0 \2022 \00a0 \2022';
  display: block;
  text-align: center;
}
article blockquote {
  font-family: 'Sorts Mill Goudy', serif;
  font-weight: 900;
  margin: 15px;
  position: relative;
  text-align: center;
}
article blockquote:before {
  content: url("../images/quote.png");
  left: 0;
  opacity: 0.2;
  position: absolute;
}
article figure figcaption {
  margin-bottom: 2em;
  font-family: monospace;
  font-style: italic;
  position: relative;
  top: -0.5em;
  text-align: center;
  text-decoration: underline;
}
article .date {
  font-family: monospace;
  display: block;
  text-align: center;
}
article .date:before,
article .date:after {
  content: '\2022';
}
article .node__links {
  margin: 10px;
}
article h4 {
  font-family: Georgia;
  font-style: italic;
  font-weight: 200;
}
article h5 {
  font-family: 'Sorts Mill Goudy', serif;
  font-weight: 100;
}
article h6 {
  font-family: sans-serif;
  font-weight: 100;
}
article img {
  box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.5);
  border-radius: 5px;
  display: block;
  height: 100%;
  margin: 1rem auto;
  max-width: 90%;
  padding: 5px;
}
article .field--name-field-tags h3 {
  margin: 0;
}
article .field--name-field-tags .field__label {
  background-color: #888;
  text-align: center;
}
article .field--name-field-tags ul {
  background-color: #bbb;
}
article .field--name-field-tags ul li {
  display: inline-block;
  margin: 5px 10px;
  padding: 3px 5px;
  position: relative;
}
article .field--name-field-tags ul li:hover:before {
  content: '\0023';
  color: #435a6b;
  position: absolute;
  left: -3px;
}
footer {
  text-align: center;
}
.main-sidebar {
  text-align: center;
  position: relative;
}
.main-sidebar .contextual-region {
  margin-bottom: 1em;
  position: relative;
  top: -50px;
}
.main-sidebar #block-mokte-branding img {
  max-width: 320px;
  max-height: 320px;
  vertical-align: middle;
}
.main-sidebar #block-mokte-main-menu {
  overflow-x: auto;
  padding: 0.5em;
  text-align: center;
  white-space: nowrap;
}
.main-sidebar #block-mokte-main-menu li {
  display: inline-block;
}
.main-sidebar #block-mokte-main-menu li a {
  margin: 0 0.5rem;
  padding: 0 0.2rem;
}
header {
  background-image: url("../images/bg.jpg");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% 100%;
  height: 590px;
}
header #block-sitebranding {
  position: absolute;
  top: 50%;
  width: 100%;
}
header #block-sitebranding a {
  display: block;
  font-size: 2.7rem;
  color: #fff;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 0 0.2em #000;
}
header #block-sitebranding {
  color: #fff;
  text-align: center;
}
.pager {
  overflow-x: auto;
  white-space: nowrap;
  padding: 0.5em;
  margin: 0;
  text-align: center;
}
.pager li {
  display: inline-block;
}
.pager li a {
  margin: 0 0.5rem;
  padding: 0 0.2rem;
}
/* FIN MAKEUP */
